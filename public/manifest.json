{
  "manifest_version": 3,
  "name": "Bloomodoro",
  "description": "Cultivate your focus with this gamified Pomodoro timer. Grow a garden, earn achievements, and stay productive.",
  "version": "1.0.1",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "offscreen"
  ]
}